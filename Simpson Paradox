# â•”â•â•¡ d4d2b842-fce4-11ea-0150-4d40a7ed9962
function mpad(obj, width::Int)
	
	if typeof(obj) <: Number
		text = string(obj)
	elseif typeof(obj) <: String
		text = obj
	else
		throw(ArgumentError("object type unusable."))
	end
		
	
	 
	if length(text) > width
		msg = "\n\n\n" *
			  "             â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”\n" *
			  "             â”‚ á´´áµ‰Ê³áµ‰ áµ‡áµ‰ Ê·Ê°áµ‰Ê³áµ‰â”‚\n" *
			  "             â”‚Ê¸áµ’áµ˜ Ë¢á¶œÊ³áµ‰Ê·áµ‰áµˆ áµ˜áµ–â”‚\n" *
			  "             â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜\n" *
			  "            /                \n" *
			  "         ğŸ˜ƒ                  \n" *
			  "              length(text) áµ‡áµ‰ áµáµ’Ê³áµ‰ width\n" *
			  "                          â†“\n" *
			  "        function cpad(text::String, width::Int)\n\n\n"

		throw(DomainError(msg))
	end

	pad_totl = width - length(text)
	pad_left = pad_totl Ã· 2
	pad_rght = pad_totl - pad_left


	return " "^pad_left * text * " "^pad_rght
	 
end

# â•”â•â•¡ b18c3054-fce0-11ea-074f-27c9051cda55
begin
	
	Bart_attempts_1Ë¢áµ— = Bart_made_1Ë¢áµ— + Bart_miss_1Ë¢áµ—
	Bart_accuracy_pct_1Ë¢áµ— = 100.0 * Bart_made_1Ë¢áµ— / Bart_attempts_1Ë¢áµ—
	
	Lisa_attempts_1Ë¢áµ— = Lisa_made_1Ë¢áµ— + Lisa_miss_1Ë¢áµ—
	Lisa_accuracy_pct_1Ë¢áµ— = 100.0 * Lisa_made_1Ë¢áµ— / Lisa_attempts_1Ë¢áµ—
	
	
	if Bart_accuracy_pct_1Ë¢áµ— > Lisa_accuracy_pct_1Ë¢áµ—
		summary_1Ë¢áµ— = "Bart was more accurate in the first half."
	elseif Bart_accuracy_pct_1Ë¢áµ— < Lisa_accuracy_pct_1Ë¢áµ—
		summary_1Ë¢áµ— = "Lisa was more accurate in the first half."
	else
		summary_1Ë¢áµ— = "They were equally accurate in the first half."
	end
		
	
	
	
	Bart_attempts_2â¿áµˆ = Bart_made_2â¿áµˆ + Bart_miss_2â¿áµˆ
	Bart_accuracy_pct_2â¿áµˆ = 100.0 * Bart_made_2â¿áµˆ / Bart_attempts_2â¿áµˆ
	
	Lisa_attempts_2â¿áµˆ = Lisa_made_2â¿áµˆ + Lisa_miss_2â¿áµˆ
	Lisa_accuracy_pct_2â¿áµˆ = 100.0 * Lisa_made_2â¿áµˆ / Lisa_attempts_2â¿áµˆ
	
	
	if Bart_accuracy_pct_2â¿áµˆ > Lisa_accuracy_pct_2â¿áµˆ
		summary_2â¿áµˆ = "Bart was more accurate in the second half."
	elseif Bart_accuracy_pct_2â¿áµˆ < Lisa_accuracy_pct_2â¿áµˆ
		summary_2â¿áµˆ = "Lisa was more accurate in the second half."
	else
		summary_2â¿áµˆ = "They were equally accurate in the second half."
	end
	
	
	
	Bart_made_game = Bart_made_1Ë¢áµ— + Bart_made_2â¿áµˆ
	Bart_attempts_game = Bart_attempts_1Ë¢áµ— + Bart_attempts_2â¿áµˆ
	
	Bart_accuracy_pct_game = 100.0 * Bart_made_game / Bart_attempts_game
	
	
	Lisa_made_game = Lisa_made_1Ë¢áµ— + Lisa_made_2â¿áµˆ
	Lisa_attempts_game = Lisa_attempts_1Ë¢áµ— + Lisa_attempts_2â¿áµˆ
	
	Lisa_accuracy_pct_game = 100.0 * Lisa_made_game / Lisa_attempts_game
	
	if Bart_accuracy_pct_game > Lisa_accuracy_pct_game
		summary_game = "Bart was more accurate in the game."
	elseif Bart_accuracy_pct_game < Lisa_accuracy_pct_game
		summary_game = "Lisa was more accurate in the game."
	else
		summary_game = "They were equally accurate in the game."
	end
		
	
	
	
	Ba1_fmd = format(Bart_accuracy_pct_1Ë¢áµ—, precision=3) * "%"
	La1_fmd = format(Lisa_accuracy_pct_1Ë¢áµ—, precision=3) * "%"
	
	Ba2_fmd = format(Bart_accuracy_pct_2â¿áµˆ, precision=3) * "%"
	La2_fmd = format(Lisa_accuracy_pct_2â¿áµˆ, precision=3) * "%"
	
	
	Bag_fmd = format(Bart_accuracy_pct_game, precision=3) * "%"
	Lag_fmd = format(Lisa_accuracy_pct_game, precision=3) * "%"
	
	
	
	wid_B1 = length(string(Bart_attempts_1Ë¢áµ—))
	wid_L1 = length(string(Lisa_attempts_1Ë¢áµ—))
	
	wid_B2 = length(string(Bart_attempts_2â¿áµˆ))
	wid_L2 = length(string(Lisa_attempts_2â¿áµˆ))
	
	wid_Bg = length(string(Bart_attempts_game))
	wid_Lg = length(string(Lisa_attempts_game))
	
	
	text = "First Half:\n\n\n" *
	       "      " * mpad(Bart_made_1Ë¢áµ—, wid_B1) * "\n" *
	       "Bart: " * rpad("â”€"^wid_B1, 5) * "=   " * Ba1_fmd * "\n" *
	       "      " * mpad(Bart_attempts_1Ë¢áµ—, wid_B1) * "\n\n\n" *
	
	       "      " * mpad(Lisa_made_1Ë¢áµ—, wid_L1) * "\n" *
	       "Lisa: " * rpad("â”€"^wid_L1, 5) * "=   " * La1_fmd * "\n" *
	       "      " * mpad(Lisa_attempts_1Ë¢áµ—, wid_L1) * "\n\n\n\n" * 
		   summary_1Ë¢áµ— * "\n"^4	*
	
	
	       "Second Half:\n\n\n" *
	       "      " * mpad(Bart_made_2â¿áµˆ, wid_B2) * "\n" *
	       "Bart: " * rpad("â”€"^wid_B2, 5) * "=   " * Ba2_fmd * "\n" *
	       "      " * mpad(Bart_attempts_2â¿áµˆ, wid_B2) * "\n\n\n" *
	
	       "      " * mpad(Lisa_made_2â¿áµˆ, wid_L2) * "\n" *
	       "Lisa: " * rpad("â”€"^wid_L2, 5) * "=   " * La2_fmd * "\n" *
	       "      " * mpad(Lisa_attempts_2â¿áµˆ, wid_L2) * "\n\n\n\n" *
		   summary_2â¿áµˆ * "\n"^6 *
	
	       "Game:\n\n\n" *
	       "      " * mpad(Bart_made_game, wid_Bg) * "\n" *
	       "Bart: " * rpad("â”€"^wid_Bg, 5) * "=   " * Bag_fmd * "\n" *
	       "      " * mpad(Bart_attempts_game, wid_Bg) * "\n\n\n" *
	
	       "      " * mpad(Lisa_made_game, wid_Lg) * "\n" *
	       "Lisa: " * rpad("â”€"^wid_Lg, 5) * "=   " * Lag_fmd * "\n" *
	       "      " * mpad(Lisa_attempts_game, wid_Lg) * "\n\n\n\n" *
	       summary_game
	
	@bind output TextField((83, 25), text) 				          
end

